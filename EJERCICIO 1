#Ejercicio 3
a= float(input("Escribe el primer numero: "))
b= float(input("Escribe el segundo numero: "))
c= float(input("Escribe el tercer numero: "))
if (a+1==b) and (b+1==c):
    print("Los números están en orden")
else:
    print("Los número no están en orden")

#Ejercicio 4
a= int(input("Escribe el primer numero: "))
b= int(input("Escribe el segundo numero: "))
c= int(input("Escribe el tercer numero: "))
d= int(input("Escribe el cuarto numero: "))
if (0>a) and (0>b) and (0>c) and (0>d):
    print("Los numeros son negativos")
else:
    print("No todos los numeros son negativos")

#Ejercicio 5
a= int(input("Inserta un número: "))
if (a%2==0):
    print("El número es par")
else:
    print("El numero no es par")

#Challenge
a= int(input("Inserta el peso de la sandía: "))
if (a%2==0) and(a>0):
    print("La sandía se puede partir en dos")
else:
    print("La sandía no se puede partir en dos")
